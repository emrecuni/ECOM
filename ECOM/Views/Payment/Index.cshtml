<link href="~/css/payment.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="my-addresses">
    <!--seçili adres-->
    <div class="selected-address">
        <div id="selected-address-content" class="address">
            <h5>Evim</h5>
            <p>Sultanbeyli/İstanbul</p>
        </div>
    </div>
    <div class="add-address">
        <button onclick="showAddresses()" class="btn btn-primary">Adres Ekle / Değiştir</button>

        <div id="addresses" class="addresses">
            <div class="d-flex justify-content-between">
                <h4>Adreslerim</h4>
                <button onclick="addAddress()" class="btn btn-warning">Adres Ekle</button>
            </div>

            <!--mevcut adresler-->
            <div id="other-addresses" class="other-addresses">
                <div class="address"  onclick="selectAddress(this)">
                    <h5>Evim</h5>
                    <p>Sultanbeyli/İstanbul</p>
                </div>
                <div class="address"  onclick="selectAddress(this)">
                    <h5>İşim</h5>
                    <p>Ümraniye/İstanbul</p>
                </div>
            </div>

            <!--adres ekleme-->
            <div id="new-address" class="new-address">
                <form asp-controller="Account" asp-action="Address" method="post" class="container my-5 p-4 border rounded shadow-sm bg-light">

                    <!-- Kişisel Bilgiler -->
                    <div class="mb-4">
                        <h5 class="mb-3">Kişisel Bilgileriniz</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Ad</label>
                                <input type="text" name="name" id="name" class="form-control" placeholder="Adınızı giriniz">
                            </div>
                            <div class="col-md-6">
                                <label for="surname" class="form-label">Soyad</label>
                                <input type="text" name="surname" id="surname" class="form-control" placeholder="Soyadınızı giriniz">
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label">Telefon</label>
                                <input type="tel" name="phone" id="phone" class="form-control" placeholder="5xx xxx xx xx">
                            </div>
                        </div>
                    </div>

                    <!-- Adres Bilgileri -->
                    <div class="mb-4">
                        <h5 class="mb-3">Adres Bilgileriniz</h5>

                        <div class="mb-3">
                            <label class="form-label d-block">Adres Türü</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="addressType" id="home" value="home">
                                <label class="form-check-label" for="home">Ev</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="addressType" id="work" value="work">
                                <label class="form-check-label" for="work">İş Yeri</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Adres</label>
                            <textarea name="address" id="address" class="form-control" rows="3" placeholder="Adresinizi yazınız..."></textarea>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="city" class="form-label">Şehir</label>
                                <select class="form-select" id="city" name="city">
                                    <option selected disabled>Seçiniz</option>
                                    <option>İstanbul</option>
                                    <option>Samsun</option>
                                    <option>Erzurum</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="district" class="form-label">İlçe</label>
                                <select class="form-select" id="district" name="district">
                                    <option selected disabled>Seçiniz</option>
                                    <option>Sultanbeyli</option>
                                    <option>Ümraniye</option>
                                    <option>Sancaktepe</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="neighbourhood" class="form-label">Mahalle</label>
                                <select class="form-select" id="neighbourhood" name="neighbourhood">
                                    <option selected disabled>Seçiniz</option>
                                    <option>Ahmet Yesevi</option>
                                    <option>Mimar Sinan</option>
                                    <option>Hamidiye</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Adresi Ekle</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    function showAddresses() {
        const addresses = document.querySelector('.addresses');
        addresses.style.display = addresses.style.display === 'block' ? 'none' : 'block';
    }

    function addAddress() {
        const addresses = document.querySelector('.other-addresses');
        addresses.style.display = addresses.style.display === 'block' ? 'none' : 'block';
        const newAddress = document.querySelector('.new-address');
        newAddress.style.display = newAddress.style.display === 'none' ? 'block' : 'none';
    }

    function selectAddress(element) {
        // Tüm adreslerden selected sınıfını kaldır
        const allAddresses = document.querySelectorAll('.other-addresses .address');
        allAddresses.forEach(addr => addr.classList.remove('selected'));

        // Seçilen adresi vurgula
        element.classList.add('selected');

        // Seçilen adresin içeriğini al ve "selected-address" kısmını güncelle
        const selectedAddressDiv = document.getElementById('selected-address-content');
        selectedAddressDiv.innerHTML = element.innerHTML;
        showAddresses();
    }
</script>