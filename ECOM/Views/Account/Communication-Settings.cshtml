<script>
    // Butona tıklayınca form yükle
    const formData = "toMail=@Model.Email"
    $("#btnOpenForm").click(function () {
        $.post("/Account/SendOTPCode", formData, function (data) {
            $("#myModal .modal-content").html(data); // partial'ı modal içine bas
            var modal = new bootstrap.Modal(document.getElementById('myModal'));
            modal.show(); // modalı aç
        });
    });

    // Modal içindeki form submit olayı
    $(document).on("submit", "#userForm", function (e) {
        e.preventDefault();

        const customer = "customerId=@Model.CustomerId&phone=@Model.Phone&" + $(this).serialize();        

        $.post("/Account/EditCommunicationSettings", customer  , function (result) {
           
        });
    });
</script>
