@{
    ViewData["Title"] = "Ödeme Hatası";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center" role="alert">
        <h2>Ödeme Başarısız!</h2>
        <p>Maalesef ödemeniz tamamlanamadı.</p>
        <hr>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <p><strong>Hata Mesajı:</strong> @ViewBag.ErrorMessage</p>
        }
        else
        {
            <p>Lütfen tekrar deneyiniz veya bizimle iletişime geçiniz.</p>
        }
    </div>

    <div class="text-center">
        <a href="/Cart" class="btn btn-warning">Sepete Geri Dön</a>
    </div>
</div>
