<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="~/css/main.css">

<div class="container mt-4">
    <!-- Üst Kısım -->
    <div class="top d-flex align-items-center justify-content-between shadow-sm">
        <a asp-controller="Main" asp-action="Index" class="logo d-flex align-items-center">
            <img src="~/img/logo.png" alt="Logo" width="150">
        </a>

        <div class="search-bar d-flex">
            <form action="" method="post" class="d-flex">
                <input type="text" name="search" class="form-control" placeholder="Ürün ara...">
                <button type="submit" class="btn btn-warning ms-2">Ara</button>
            </form>
        </div>

        <div class="d-flex align-items-center">

            <div class="menu-container">
                <!-- Ana bağlantı -->
                <a class="account me-3 d-flex align-items-center text-dark">
                    <i class="fas fa-user-circle me-2"></i>
                    <b>Hesabım</b>
                </a>

                <!-- Hover ile açılan alt menü -->
                <div class="dropdown-menu">
                    <a asp-controller="Account" asp-action="Index" asp-route-id="user">Kullanıcı Bilgilerim</a>
                    <a asp-controller="Account" asp-action="Index" asp-route-id="order">Siparişlerim</a>
                    <a asp-controller="Account" asp-action="Index" asp-route-id="favorite">Beğendiklerim</a>
                    <a asp-controller="Account" asp-action="Index" asp-route-id="coupon">Kuponlarım</a>
                    <a asp-controller="Login" asp-action="Logout">Çıkış Yap</a>
                </div>
            </div>
            <a asp-controller="Cart" asp-action="Index" class="cart d-flex align-items-center text-dark">
                <i class="fas fa-shopping-cart me-2"></i>
                <b>Sepetim</b>
            </a>
        </div>
    </div>

    <!-- Kategoriler -->
    <div class="categories-container mt-4">
        <h4 class="mb-3">Kategoriler</h4>
        <ul class="list-unstyled d-flex flex-wrap gap-2">
            <li><a href="#" class="btn btn-outline-primary"><b>Elektronik</b></a></li>
            <li><a href="#" class="btn btn-outline-primary"><b>Moda</b></a></li>
            <li><a href="#" class="btn btn-outline-primary"><b>Ev, Yaşam</b></a></li>
            <li><a href="#" class="btn btn-outline-primary"><b>Oto, Bahçe</b></a></li>
            <li><a href="#" class="btn btn-outline-primary"><b>Anne, Bebek</b></a></li>
            <li><a href="#" class="btn btn-outline-primary"><b>Spor</b></a></li>
        </ul>
    </div>
</div>
