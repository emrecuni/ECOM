@model ECOM.Data.Customers

<div class="tab-pane fade" id="communication-settings">
    <h5>İletişim Bilgileri</h5>
    <p>Bu bilgileri değiştirebilmek için yeni e-posta adresinizi doğrulamanızı isteyeceğiz.</p>
    <form method="post" action="CommunicationSettings">
        <div class="mb-3 phone">
            <label for="phone" class="form-label">Cep Telefonu</label>
            <input type="tel" class="form-control" id="phone" name="phone" value="@Model.Phone" placeholder="Telefon numaranızı girin" required>
        </div>
        <button class="btn btn-primary" type="submit">Güncelle</button>
    </form>
    <div class="mt-3 mb-3 email">
        <label for="email" class="form-label">E-Posta</label>
        <input type="email" class="form-control" id="email" name="email" value="@Model.Email" disabled placeholder="E-Posta adresinizi girin" required>
    </div>
    <button type="button" class="btn btn-primary" id="btnOpenForm">E-Mail Değiştir</button>
</div>

<!-- Boş Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- İçerik AJAX ile gelecek -->
        </div>
    </div>
</div>

