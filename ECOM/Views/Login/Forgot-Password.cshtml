@using ECOM.Models
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/login.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="forgotpassword-container">
    <h2>Parola Yenileme</h2>
    <p class="forgotpassword-content">Parola yenileme bağlantısını gönderebilmemiz için e-mail adresinize ihtiyacımız var.</p>

    <form action="ForgotPassword" method="post">
        <div class="mb-3">
            <input type="email" id="email" name="email" class="form-control" placeholder="E-Mail Adresi" required>
        </div>
        <!-- geçerli bir email girene kadar buton disable olacak bknz:0001-->
        <button type="submit" class="btn btn-custom">Devam Et</button>
    </form>
    @if (ViewBag.IsSuccess is not null)
    {

        string cssClass = ViewBag.IsSuccess switch
        {
            StatusTypes.Success => "bg-error info",
            StatusTypes.Warning => "bg-success info",
            StatusTypes.Error => "bg-danger info text-white",
            _ => string.Empty,
        };

        string iconClass = ViewBag.IsSuccess switch
        {
            StatusTypes.Success => "fas fa-check",
            StatusTypes.Warning => "fas fa-exclamation-circle",
            StatusTypes.Error => "fa-solid fa-x",
            _ => string.Empty,
        };

        <div class="@cssClass">
            <i class="@iconClass"></i>
            @ViewBag.Info
        </div>
    }
</div>

<script src="~/lib/popperjs/dist/umd/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>