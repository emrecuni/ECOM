<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<link rel="stylesheet" href="~/css/cart-header.css" />

<div class="header-container">
    <a asp-controller="Main" asp-action="Index" class="logo d-flex align-items-center">
        <img src="~/img/logo.png" alt="Logo" width="150">
    </a>

    <div class="search-bar d-flex">
        <form action="" method="post" class="d-flex">
            <input type="text" name="search" class="form-control" placeholder="Ürün ara...">
            <button type="submit" class="btn btn-warning ms-2"><b>Ara</b></button>
        </form>
    </div>
    <div>
        <div class="cart">
            <a asp-controller="Account" asp-action="Index" asp-route-id="order" class="btn btn-success cart-button">
                <i class="fas fa-shopping-cart me-2 cart-button"></i>
                <b>Siparişlerim</b>
            </a>
        </div>
        <div class="account">
            <a asp-controller="Account" asp-action="Index" asp-route-id="user" class="btn btn-danger account-button">
                <i class="fas fa-user-circle"></i>
            </a>
        </div>
    </div>
</div>

